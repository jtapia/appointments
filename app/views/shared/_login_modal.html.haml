.modal.login#login-modal
  .modal-dialog
    .modal-content
      .modal-body
        .modal-close{ data: { dismiss: 'modal' }}
          %i.fa.fa-times
        .content
          %h4= t('login.title')
          = form_for 'user', :url => user_session_path do |f|
            = f.email_field :email, class: 'title modal-join', tabindex: 1, label: false, placeholder: 'EMAIL ADDRESS'
            = f.password_field :password, class: 'title modal-join', tabindex: 2, label: false, placeholder: 'PASSWORD'
            = f.submit t('login.title'), class: 'btn btn-secondary modal-join', tabindex: 3
